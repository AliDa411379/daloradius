CONTRIB_SCRIPTS="/var/www/daloradius/contrib/scripts"

# This job maintenance/fix-stale-sessions.php runs every */1 minutes.
*/1 * * * * /usr/bin/php "$CONTRIB_SCRIPTS/maintenance/fix-stale-sessions.php" >/dev/null 2>&1

# This job monitor/node-status-monitor.php runs every */5 minutes.
*/5 * * * * /usr/bin/php "$CONTRIB_SCRIPTS/monitor/node-status-monitor.php" >/dev/null 2>&1

# This job monitor/user-traffic-monitor.php runs every */20 minutes.
*/20 * * * * /usr/bin/php "$CONTRIB_SCRIPTS/monitor/user-traffic-monitor.php" >/dev/null 2>&1
